<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_virtual_stick_enable"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/virtual_stick_enable"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_virtual_stick_enable"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_virtual_stick_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/open"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"/>
            <ToggleButton
                android:id="@+id/tbtn_virtual_stick_state"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/toggle_selector"
                android:gravity="center_vertical"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/controller"
        android:textSize="30sp"/>
</LinearLayout>