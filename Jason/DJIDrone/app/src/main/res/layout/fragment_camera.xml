<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_camera_mode_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/camera_mode_info"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_camera_mode_info"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_camera_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/shoot_photo"
                android:textSize="25sp"
                android:gravity="center_vertical"
                android:layout_marginEnd="20dp"/>
            <Switch
                android:id="@+id/sw_camera_mode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:switchMinWidth="50dp"
                android:track="@drawable/switch_selector"
                android:gravity="center_vertical"
                android:checked="false"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="@color/colorBackground"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_shooting_mode_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/camera_mode_info"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/tv_shooting_mode_info"
            android:gravity="center"
            android:orientation="horizontal">
            <Spinner
                android:id="@+id/spn_shooting_mode"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown"/>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/camera"
        android:textSize="40sp" />
</LinearLayout>
